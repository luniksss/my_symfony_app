{% extends "base.html.twig" %}
{% block title %}User Profile{% endblock %}
{% block content %}
<div class="user">
    <img src="/uploads/{{user.getAvatarPath()}}">
    <p>Id: {{ user.getUserId()}}</p>
    <p>First Name: {{ user.getFirstName() }}</p>
    <p>Last Name: {{ user.getLastName() }}</p>
    <p>Middle Name: {{ user.getMiddleName() }}</p>
    <p>Gender: {{ user.getGender() }}</p>
    <p>Birth Date: {{ user.getBirthDate()}}</p>
    <p>Email: {{ user.getEmail()}}</p>
    <p>Phone: {{ user.getPhone()}}</p>
    <p>Avatar Path: {{ user.getAvatarPath()}}</p>
    <form action="/user/list">
        <button class="user__buttons">User list</button>
    </form>
    <br>
    <form action="/user/update/{{ user.getUserId() }}" method="post">
        <input type="hidden" name="id" value="{{ user.getUserId()}}" />
        <button class="user__buttons">Update User</button>
    </form>
    <br>
    <form action="/user/delete/{{ user.getUserId()}}" method="post">
        <input type="hidden" name="id" value="{{ user.getUserId()}}" />
        <input type="hidden" name="avatar_path" value="{{user.getAvatarPath()}}" />
        <button class="user__buttons">Delete User</button>
    </form>
</div>
{% endblock %}